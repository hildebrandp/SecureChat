<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="E-Mail:"
            android:id="@+id/txtusername"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="74dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="117dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="User Email"
            android:textColorHint="#666666"
            android:ems="10"
            android:id="@+id/edtusername"
            android:layout_below="@+id/txtusername"
            android:layout_alignLeft="@+id/txtusername"
            android:layout_alignStart="@+id/txtusername" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Password:"
            android:id="@+id/txtuserpassword"
            android:layout_below="@+id/edtusername"
            android:layout_alignLeft="@+id/edtusername"
            android:layout_alignStart="@+id/edtusername" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:hint="Password"
            android:textColorHint="#666666"
            android:ems="10"
            android:id="@+id/edtuserpassword"
            android:layout_below="@+id/txtuserpassword"
            android:layout_alignLeft="@+id/txtuserpassword"
            android:layout_alignStart="@+id/txtuserpassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/btnlogin"
            android:background="@color/colorAccent"
            android:layout_below="@+id/edtuserpassword"
            android:layout_alignLeft="@+id/edtuserpassword"
            android:layout_alignStart="@+id/edtuserpassword"
            android:layout_alignRight="@+id/edtuserpassword"
            android:layout_alignEnd="@+id/edtuserpassword" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Or Create new Account"
            android:id="@+id/txtnewAccount"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btnlogin"
            android:layout_alignRight="@+id/btnlogin"
            android:layout_alignEnd="@+id/btnlogin" />
    </RelativeLayout>
</LinearLayout>